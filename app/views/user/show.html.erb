<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center py-5">Vos informations</h1>
    <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="http://keenthemes.com/preview/metronic/theme/assets/admin/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= @first_name %> <%= @last_name %>
					</div>
					<div class="profile-usertitle-job">
						Developer
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
          <a href="<%= edit_user_path %>"><button type="button" class="btn btn-success btn-sm">Edit info</button></a>
          <a href="<%= edit_user_registration_path %>"><button type="button" class="btn btn-danger btn-sm">Edit login</button></a>
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
        <div class="profile-description">
				      <p><span class="profile-description-title">Email : </span><br><%= @user.email %></p>
              <br>
              <p><span class="profile-description-title">Description : </span><br><%= @user.description %></p>
        </div>
				<!-- END MENU -->
			</div>
		</div>
		<div class="col-md-9">
            <div class="profile-content">
              <h1 class="text-center">Vos evenements :</h1>
              <% @user.events.each do |event| %>
                <div class="card my-4 box-shadow mx-4">
                  <img class="card-img-top" <%= image_tag "concert.jpg"%>
                  <div class="card-body">
                    <h4 class="card-title"><%= event.title %></h4>
                    <p class="card-text"><%= event.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <a href="<%= event_path(event.id) %>"><button type="button" class="btn btn-sm btn-outline-secondary">Show</button></a>
                        <a href="<%= event_path(event.id) %>"><button type="button" class="btn btn-sm btn-outline-secondary">Show</button></a>
                      </div>
                      <small class="text-muted"><%= event.start_date %></small>
                    </div>
                  </div>
                </div>
              <%end%>
            </div>
		</div>
	</div>
</div>

<br>
<br>
  </body>
</html>
