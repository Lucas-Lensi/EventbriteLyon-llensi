<div class="card mx-auto mt-5" style="width: 25rem;">
<article class="card-body">
	<h4 class="card-title text-center mb-4 mt-1">Sign Up</h4>
	<hr>
	<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
	<div class="form-group">

	<div class="input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
	</div> <!-- input-group.// -->
	</div> <!-- form-group// -->
	<div class="form-group">
	<div class="input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		 </div>
     <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "*******" %>
	</div>
  <% if @minimum_password_length %>
  <small><em>(<%= @minimum_password_length %> characters minimum)</em></small>
  <% end %><br />
  <div class="input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		 </div>
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "*******" %>
	</div>
  <br>
	</div> <!-- form-group// -->
	<div class="form-group">
	<%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
	</div> <!-- form-group// -->
	<%end%>
    <%= render "devise/shared/links" %>
</article>
</div>
